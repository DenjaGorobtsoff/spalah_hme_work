{{ header }}
<div id="information-contact" class="container" xmlns="http://www.w3.org/1999/html">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li>
                <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
            {% endfor %}
        </ul>
        <div class="row">
            <div id="content" class="col-sm-12">
                <h1>{{ heading_title }}</h1>
                <p>{{ partnership_text }}</p>
                {% if success %}
                    <p>{{ success }}</p>
                {% else %}
                <!-- ACTION записан в нашем контроллере Partnership -->
                <form action="{{ action }}" method="post" class="form-horizontal">
                    <fieldset>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                            <div class="col-sm-10">
                                {% if error.name is defined %}
                                    <div class="text-danger">{{ error_name }}</div>
                                {% endif %}
                                <input type="text" name="name" value="{{ name }}" id="input-name" class="form-control" />
                            </div>
                        </div>
                        <hr />
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
                            <div class="col-sm-10">
                                {% if error.email is defined %}
                                    <div class="text-danger">{{ error_email }}</div>
                                {% endif %}
                                <input type="text" name="email" value="{{ email }}" id="input-email" class="form-control" />
                            </div>
                        </div>
                        <hr />
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-company">{{ entry_company }}</label>
                            <div class="col-sm-10">
                                {% if error.company is defined %}
                                    <div class="text-danger">{{ error_company }}</div>
                                {% endif %}
                                <input type="text" name="company" value="{{ company }}" id="input-company" class="form-control" />
                            </div>
                        </div>
                        <hr />
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-age">Age{{ entry_ege }}</label>
                            <div class="col-sm-10">
                                {% if error.age is defined %}
                                    <div class="text-danger">{{ error_age }}</div>
                                    <input type="text" maxlength="2" name="age" value="{{ age }}" id="input-company" class="form-control" />
                                    {% elseif error.age_18 is defined %}
                                    <div class="text-danger">{{ error_age_18 }}</div>
                                       <input type="text" maxlength="2" name="age" value="{{ age }}" id="input-company" class="form-control text-danger" />
                                    {% else %}
                                <input type="text" maxlength="2" name="age" value="{{ age }}" id="input-company" class="form-control" />
                                {% endif %}
                            </div>
                        </div>
                        <hr />
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-company">{{ entry_entity }}</label>
                            <div class="col-sm-10">
                                <label><input type="radio" name="tax_form" {{ check1 }} value="juridical" />Juridical<br /></label>
                                <label><input type="radio" name="tax_form" {{ check2 }} value="physical" />Physical<br /></label>
                                <!--<select name="tax_form">
                                    <option></option>
                                    <option>Juridical</option>
                                    <option>Physical</option>
                                </select>-->
                            </div>
                        </div>
                        <hr />
                        <!--------------------------------------IMAGE------------------------------------>
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-document"> Image </label>
                            <div class="col-sm-10">
                                <input type="file" name="image" value="" id="input-image-db" />
                            </div>
                        </div>
                        <hr />
                        <!-------------------------------------FILES------------------------------------->
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-document">{{ entry_file }}</label>
                            <div class="col-sm-10">
                                {% if error.file_size is defined %}
                                    <div class="text-danger">{{ error_size_file }}</div>
                                {% endif %}
                                <input type="file" name="file" value="" id="input-document" />
                            </div>
                        </div>
                        <hr />
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-comment">{{ entry_comment }}</label>
                            <div class="col-sm-10">
                                <textarea type="comment" rows="8" name="comment" value="" id="input-enquiry" class="form-control"></textarea>
                            </div>
                        </div>

                    </fieldset>
                    <div class="button">
                        <div class="pull-right">
                            <input class="btn btn-primary" type="submit" value="{{ button_submit }}" />
                        </div>
                    </div>
                </form>
                {% endif %}
            </div>
        </div>
    </div>
{{ footer }}
